<Window x:Class="UDPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <TextBox Name="ServerIpTextBox" HorizontalAlignment="Left" Height="23" Margin="36,43,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="168"/>
        <TextBox Name="PortTextBox" HorizontalAlignment="Left" Height="23" Margin="220,43,0,0" TextWrapping="Wrap" Text="12345" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="FileNameTextBox" HorizontalAlignment="Left" Height="23" Margin="36,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="236"/>
        <Button Name="SelectFileButton" Content="Select file" Click="SelectFileButton_Click" HorizontalAlignment="Left" Margin="393,119,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <Button Name="SendButton" Content="Send" Click="SendButton_Click" HorizontalAlignment="Left" Margin="296,119,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <ProgressBar HorizontalAlignment="Left" Height="28" Margin="65,196,0,0" VerticalAlignment="Top" Width="353"/>

    </Grid>
</Window>
